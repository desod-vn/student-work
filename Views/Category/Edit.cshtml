@model StudentWork.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa chuyên mục";
    Layout = "_DashboardLayout";
}


<h1>@ViewData["Title"]</h1>

<h4>
    @Model.Name
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                @*<input asp-for="Image" class="form-control" />*@
                <input @*class="form-control text-box single-line"*@ id="ImageFile" name="ImageFile" accept="image/*" type="file" value=""
                       onchange="onFileChosen(event, '#imageWrapper')" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <div id="imageWrapper" class="row col-md-12">

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách chuyên mục</a>
</div>

