@model IEnumerable<StudentWork.Models.User>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "Layout/_DashboardLayout";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Thêm tài khoản mới</a>
</p>


<div class="row">
@foreach (var item in Model) {
    <div class="col-lg-4">
        <div class="border p-2 mb-2">
            <div class="text-right">
                <span class="badge badge-dark">
                    @Html.DisplayNameFor(model => model.Id):
                    @Html.DisplayFor(modelItem => item.Id)
                </span>
            </div>
            <br />
            @Html.DisplayNameFor(model => model.Email): 
            @Html.DisplayFor(modelItem => item.Email)
            <br />
            @Html.DisplayNameFor(model => model.Name): 
            @Html.DisplayFor(modelItem => item.Name)
            <hr />
            <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Chỉnh sửa tài khoản</a>
            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Xóa tài khoản</a>
        </div>
    </div>
}
</div>
