@model IEnumerable<StudentWork.Models.Fund>

@{
    ViewData["Title"] = "Hoạt động gây quỹ";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />
@*<h1>Index</h1>*@

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th style="background-color: red;" colspan="4">
                Danh sách đóng góp Quỹ hỗ trợ sinh viên
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
