@section scripts {
    <script>
        var $el = $("#table-scroll");
        function anim() {
            var st = $el.scrollTop();
            var sb = $el.prop("scrollHeight")-$el.innerHeight();
            $el.animate({scrollTop: st < sb / 2 ? sb : 0}, 2000, anim);
        }
        function stop(){
            $el.stop();
        }
        anim();
        $el.hover(stop, anim);
    </script>
}