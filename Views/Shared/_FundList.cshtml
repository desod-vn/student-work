@model IEnumerable<StudentWork.Models.Fund>



<style>
    #table-scroll{
        height: 550px;
        position: relative;
        overflow-y: hidden;
    }
    #table-scroll thead {
        position: sticky;
        top: 0;
        background-color: #fff;
    }
    #table-scroll tbody tr:hover {
        background-color: #ddd;
    }
</style>
<div class="border">
    <div class="p-3 bg-info text-light">
            Quỹ hỗ trợ Sinh Viên
    </div>
    <div id="table-scroll">
        <table class="table">
            <thead>
                <tr>
                    <th width="300px">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.From)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.From)
                        </td>
                        <td>
                            @String.Format("{0:#,0}",item.Price)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

